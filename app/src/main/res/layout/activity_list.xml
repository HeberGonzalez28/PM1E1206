<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:orientation="vertical"
    tools:context=".ActivityList">

        <ListView
            android:id="@+id/idListContactos"
            android:layout_width="match_parent"
            android:layout_height="459dp" />

        <Button
            android:id="@+id/btncompartir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botoncompartir" />

        <Button
            android:id="@+id/btnverimagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verimagen" />

        <Button
            android:id="@+id/btneliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eliminarcont" />

        <Button
            android:id="@+id/btnactualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/actualizarcont"
            tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>